<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Edit Tag</h1>
      <form action="/topics/<%= tag.topicId %>/posts/<%= tag.postId %>/tags/<%= tag.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Tag name</label>
          <input value="<%= tag.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Tag Name">
        </div>
        <div class="form-group">
          <label for="body">Color</label>
          <textarea rows="4" class="form-control" name="color" placeholder="Enter Tag Color"><%= tag.color %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>