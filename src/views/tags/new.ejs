<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>New Tag</h1>
      <form action="/topics/<%= topicId %>/posts/<%= postId %>/tags/create" method="post">
        <div class="form-group">
          <label for="name">Tag name</label>
          <input type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Tag Name">
        </div>
        <div class="form-group">
          <label for="color">Color</label>
          <input type="text" class="form-control" name="color" aria-describedby="titleHelp" placeholder="Choose Color">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>