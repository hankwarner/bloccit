<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= post.title %></h1>
      <a href="/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
      <a href="/posts/<%= post.id %>/posts/new" class="btn btn-success">New Post</a>
      <form style="display:initial" action="/posts/<%= post.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <p><%= post.description %></p>
      <hr>

      <h1>Posts</h1>
   
      <ul class="list-group">
        <% post.posts.forEach((post) => { %>
          <li class="list-group-item">
            <a href="/posts/<%= post.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
          </li>
        <% }) %>
      </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>