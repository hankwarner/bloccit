<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Advertisement</h1>
      <form action="/advertisements/<%= advertisement.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Company name</label>
          <input value="<%= advertisement.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter company name">
        </div>
        <div class="form-group">
          <label for="description">Tagline/product description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter product description or tagline"><%= advertisement.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
      
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>